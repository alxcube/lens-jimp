{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "declaration": false,
    "types": ["jimp", "node", "jest"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "node_modules/@alxcube/lens",
    "src/*.spec.*"
  ],
  "include": [
    "src/**/*"
  ]
}